{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": true,
    "declaration": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": [
      "./src/**/*.{ts,tsx}"
    ]
  }
}
